# FreeRADIUS Server Configuration
# Copy this file to .env and configure for your environment

# Domain Configuration
RADIUS_DOMAIN=radius.example.com

# RADIUS Configuration
RADIUS_SECRET=changeme123
FREERADIUS_LOG_LEVEL=info
ENABLE_TLS=true

# Environment
ENVIRONMENT=development

# PostgreSQL Database Configuration
POSTGRES_PASSWORD=radiuspass123

# Test User Credentials
TEST_USER_PASSWORD=testpass123
GUEST_USER_PASSWORD=guestpass123
ADMIN_USER_PASSWORD=adminpass123
CONTRACTOR_PASSWORD=contractorpass123
VIP_PASSWORD=vippass123

# External Certbot Configuration
EXTERNAL_CERTBOT_CONTAINER=certbot
CERTBOT_PROJECT_PATH=../certbot
CERTBOT_CERT_NAME=ldap.example.com

# EAP-TLS Client CA Configuration
# Path to the CA certificate used to verify client certificates
CLIENT_CA_FILE=./path/to/client-ca.pem

# MCP RADIUS SQL Server Configuration
# Token for MCP API authentication (minimum 32 characters)
MCP_TOKEN=your-secure-token-at-least-32-characters-long
LOG_LEVEL=info
