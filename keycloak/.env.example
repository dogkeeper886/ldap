# Keycloak SAML IdP Configuration
# Copy this file to .env and configure for your environment

# Domain Configuration
KEYCLOAK_DOMAIN=keycloak.example.com

# Keycloak Admin Credentials
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=AdminPass123!

# LDAP Federation Configuration
LDAP_HOST=openldap
LDAP_PORT=636
LDAP_DOMAIN=ldap.example.com
LDAP_ADMIN_PASSWORD=SecureAdmin123!

# External Certbot Configuration
EXTERNAL_CERTBOT_CONTAINER=certbot
CERTBOT_PROJECT_PATH=../certbot
CERTBOT_CERT_NAME=ldap.example.com
